<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Roomie</title>
  <link rel="stylesheet" href="/styles/app.css">
  <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
</head>
<body>
  <div class="main">
    <div class="main__left">
      <div class="main__videos">
        <div class="" id="video-space">
        </div>
      </div>

      <input style="display: none;" type="text" value="" id="myUrl">
      <div class="main__controls">
        <div class="main__controls__block">
          <div onclick="muteUnmute()" class="main__controls__button">
              <i id="muteBtnIcon" class="fa fa-microphone" aria-hidden="true"></i>
            <span>Mute</span>
          </div>
          <div onclick="enableDisableVideo()" class="main__controls__button">
            <i id="videoBtnIcon" class="fas fa-video" aria-hidden="true"></i>
            <span>Stop Video</span>
          </div>
        </div>
        <div class="main__controls__block">
          <div onclick="shareScreen()" class="main__controls__button">
            <i class="fa fa-television" aria-hidden="true"></i>
            <span>Share Screen</span>
          </div>
          <div class="main__controls__button">
            <i class="fa fa-users" aria-hidden="true"></i>
            <span>Participants</span>
          </div>
          <div onclick="copyLink()" class="main__controls__button">
            <i class="fa fa-share" aria-hidden="true"></i>
            <span>Copy Link</span>
          </div>
        </div>
        <div class="main__controls__block">
          <div class="main__controls__button">
            <span class="leave">Leave Meeting</span>
          </div>
        </div>
      </div>
    </div>

    <div class="main__right">
      <div class="main__chat-header">
        <h3>Chat</h3>
      </div>
      <div class="main__chat-window">
        <ul class="messages">

        </ul>
      </div>
      <div class="main__chat-input">
        <input type="text" id="chat_message" placeholder="Type message here..." value="">
      </div>
    </div>
  </div>

  <script>
    const ROOMID = `{{ roomId }}`;
  </script>
  <script src="/scripts/app.js"></script>
  <script src="/scripts/chat.js"></script>
</body>
</html>
